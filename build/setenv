#export RANLIB=$TOOL_PREFIX-ranlib
export CC=$TOOL_PREFIX-gcc
#export LD=$TOOL_PREFIX-ld
export LD=$TOOL_PREFIX-gcc
export CCFLAGS="-march=armv6 -mno-thumb-interwork"

